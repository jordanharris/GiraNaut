block content
  .container
    header
      .container
        .row
          .col-md-12
            nav.navbar.navbar-inverse.navbar-fixed-top.container-fluid(role='navigation')
              //
                 Brand and toggle get grouped for better mobile display 
              .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a#giraNautLogo.navbar-brand GiraNaut
              //
                 Collect the nav links, forms, and other content for toggling 
              #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                  li.dropdown
                    a#signInDropDown.dropdown-toggle(href='/logout')
                      | Log-Out 
                      b.glyphicon.glyphicon-globe
    //
     Button trigger modal 
    a(href="#")
      span.glyphicons.glyphicon-flash.statisticsModal(data-toggle='modal', data-target='#myModal')
    //
     Modal 
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
            h4#myModalLabel.modal-title Modal title
          .modal-body
            | ...
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Save changes
    #wrapper.active
      //
         Sidebar 
      #sidebar-wrapper
        ul#sidebar_menu.sidebar-nav
          //- li.sidebar-brand
          //-   #menu-toggle
          //-     | Welcome (Name)
        ul#messageQueue
          //- li.chatName Jordanjskdfnjks
          //-   img.chatImage(src="../images/adrianalimacircle.png")
          //- li.chatName Jordan
          //-   img.chatImage(src="../images/adrianalimacircle.png")
          //- li.chatName Jordan
          //-   img.chatImage(src="../images/adrianalimacircle.png")
        a(href="#")
          span#main_icon.glyphicons.glyphicon-envelope
    .inner-cover
      .inner
        div.cover
          div.infoheader
            h1.cover-heading #{user.firstName}'s Profile
            img#profileImage(src="#{user.picture}")
            button#enable.btn.btn-large.btn-primary Edit Profile
          div.guideInformation
            div.guideInfoAnswers Age:
              a#age(data-type="number" data-value="#{user.age}" data-placeholder="21" data-pk="1" data-url="/guide/update" data-title="Enter username") #{user.age}
            div.guideInfoAnswers Fluent In:
              a#language(data-type="text" data-value="#{user.language}" data-pk="1" data-url="/guide/update" data-title="languages") #{user.language}
            div.guideInfoAnswers Favorite City Landmarks:
              a#landmarks(data-type="text" data-value="#{user.landmarks}" data-pk="1" data-url="/guide/update" data-title="landmarks") #{user.landmarks}
            div.guideInfoAnswers Bio:
              a#bio(data-type="textarea" data-value="#{user.bio}" data-pk="1"  data-rows="8" data-url="/guide/update" data-title="Enter username") #{user.bio}
        #touristChat
