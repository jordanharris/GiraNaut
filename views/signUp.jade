extends layout

block stylesheets
  link(rel='stylesheet', href='/stylesheets/min/signUp.min.css')


block content
  .container
    .row.vertical-offset-20
      .col-xs-12.col-sm-5.col-sm-offset-4.col-md-4.col-md-offset-4
        .panel.panel-default.sign-up-form
          .panel-heading
            h3.panel-title
              | Sign up for GiraNaut 
              small It's free!
          .panel-body
            form(accept-charset='UTF-8', action="/signUpSubmission", method="post", role='form')
              .row
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#first_name.form-control.input-sm(type='text', name='signUpSubmission[first-name]', placeholder='First Name')
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#last_name.form-control.input-sm(type='text', name='signUpSubmission[last-name]', placeholder='Last Name')
              .form-group
                input#email.form-control.input-sm(type='email', name='signUpSubmission[email]', placeholder='Email Address')
              .row
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#password.form-control.input-sm(type='password', name='signUpSubmission[password]', placeholder='Password')
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#password_confirmation.form-control.input-sm(type='password', name='signUpSubmission[password-confirmation]', placeholder='Confirm Password')
              input.btn.btn-info.btn-block(type='submit', value='Register')

block scripts
  script(src="http://mymaplist.com/js/vendor/TweenLite.min.js")
  script(src="../javascripts/min/signUp.min.js")

